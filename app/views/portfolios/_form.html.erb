<%= form_for(portfolio) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 15 %>
    </div>
  </div>
</div>

  <hr>
  <h4>Technologies Used:</h4>
<div>
    <%= f.fields_for :technologies do |technology| %>
    <div class="form-group">
        <%= technology.label :name %>
        <%= technology.text_field :name, class: 'form-control' %>
    </div>
    <% end %>
</div>

<div class="form-group">
  <%= f.submit "Save Portfolio", class: 'btn btn-primary btn-block'%>
</div>

<% end %>