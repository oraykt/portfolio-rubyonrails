<div class="col-sm-8 blog-main">
  <h2 class="d-flex justify-content-center"><%= @blog.title %></h2>
  <%= render partial: 'blogs/admin_actions', locals: { blog: @blog } %>

  <div class="card mt-3">
    <div class="card-header">
      <strong>Topic: </strong>
      <em><%= link_to "#{@blog.topic.title}", topic_path(@blog.topic)  %></em>
    </div>
    <div class="card-body text-justify">
      <%= markdown @blog.body %>
    </div>
  </div>
  <hr>
  <% unless current_user.is_a? GuestUser %>
    <%= render 'comments/form' %>
  <% end %>


  <% if @blog.comments.any? %>
    <div class="d-flex justify-content-center mt-100">
      <h4 >Latest Comments</h4>
    </div>
    <div id="comments" data-blog-id="<%= @blog.id %>" class="comment-widgets">
      <%= render @blog.comments %>
    </div>
  <% end %>

</div>