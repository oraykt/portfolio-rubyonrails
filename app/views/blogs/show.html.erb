<div class="col-sm-8 blog-main">
  <h2><%= @blog.title %></h2>
  <div class="d-flex">
    <%= link_to @blog.status, toggle_status_blog_path(@blog), class: 'btn-sm btn-' + (@blog.status == "published" ? "success" : "warning") %>
    <%= link_to 'Edit', edit_blog_path(@blog), class: 'btn-sm btn-secondary ml-2'%>
  </div>
  <p>
    <%= @blog.body %>
  </p>
  <hr>

  <% unless current_user.is_a? GuestUser %>
    <%= form_for @comment, url: '#' do |f| %>

    <div class="form-group">
      <%= f.label :content, "Comments" %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <%= f.submit "Post Comment", class: "btn btn-primary" %>
    <% end %>
  <% end %>

  <%= render @blog.comments %>
</div>